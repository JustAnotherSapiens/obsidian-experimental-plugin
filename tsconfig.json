{
  "compilerOptions": {

    /* Language and Environment */
    "target": "ES6",
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": "src",

    /* JavaScript Support */
    "allowJs": true,

    /* Emit */
    "inlineSourceMap": true,
    "importHelpers": true,
    "inlineSources": true,

    /* Interop Constraints */
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,


    /* Type Checking */
    "noImplicitAny": true,
    "strictNullChecks": true,
  },

  "include": [
    "**/*.ts"
  ],

  "exclude": [
    "**/trash/**/*"
  ]
}
